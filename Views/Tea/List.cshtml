@model TeaListViewModel

<h1>@Model.CurrentCategory</h1>
@foreach (var tea in Model.Teas)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@tea.ImageThumbnailUrl" alt="">
            <div class="caption">
                <h3 class="pull-right">@tea.Price.ToString("c")</h3>
                <h3>
                    <a asp-controller="Tea" asp-action="Details"asp-route-id="@tea.TeaId">@tea.Name</a>
                </h3>
                <p>@tea.ShortDescription</p>
            </div>
        </div>
    </div>
} 